@{bool hideToggle = ViewData["LayoutNavbarHideToggle"] != null && ViewData["LayoutNavbarHideToggle"].ToString() == "True";}

<!-- Layout navbar -->
    <nav class="layout-navbar navbar navbar-expand-lg align-items-lg-center bg-white" id="layout-navbar">

        @if (!hideToggle)
        {
            <!-- Sidenav toggle -->
            <div class="layout-sidenav-toggle navbar-nav align-items-lg-center mr-auto mr-lg-4">
                <a class="nav-item nav-link px-0 ml-2" href="javascript:void(0)">
                    <i class="ion ion-md-menu text-large align-middle"></i>
                </a>
            </div>
            <a href="/@ViewData["EventId"]/Event" class="" id="event-name-link">@ViewData["EventName"]?.ToString()</a>
            @if (ViewData["EventId"] != null)
            {
                string icon = "fa-check-circle";
                string color = "green";
                string title = "Mobile data is up-to-date!";

                if ((bool)ViewData["DirtyData"] == true)
                {
                    icon = "fa-exclamation-circle";
                    color = "red";
                    title = "Mobile data is out-of-sync and needs updating!";
                }

                <span class="mr-3">
                    <a href="/@ViewData["EventId"]/Mobile/Publish">
                        <span id="navbar-dirty-data">
                            <i class="dirty-data fas @icon" style="color: @color" title="@title"></i>
                        </span>
                    </a>
                </span>
            }
        }

        <!-- Navbar toggle -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#layout-navbar-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse" id="layout-navbar-collapse">
            <div class="navbar-nav align-items-lg-center ml-auto">
                <!-- Promoter name and avatar -->
                <a class="nav-item nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                    <span class="d-inline-flex flex-lg-row-reverse align-items-center align-middle">
                        <span class="fa-stack">
                            <i class="fas fa-circle fa-stack-2x" id="promo-avatar"></i>
                            <i class="fas fa-beer fa-stack-1x" style="color:white; left:1px"></i>
                        </span>
                        <span class="px-1 mr-lg-1 ml-2 ml-lg-0">@ViewData["Company"]?.ToString()</span>
                    </span>
                </a>
                <!-- dropdown menu-->
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="/Untappd/Auth">
                        Untappd Authentication&nbsp;&nbsp;
                        @if ((string)ViewData["AccessToken"] == string.Empty)
                        {<span class="badge badge-dot badge-danger indicator"></span> }
                        else
                        { <span class="badge badge-dot badge-success indicator"></span>}
                    </a>
                    <a class="dropdown-item" href="/Logout">Log Out</a>
                </div>
                @*<a class="nav-item nav-link dropdown-toggle text-nowrap ml-lg-2" href="#">
                    <i class="ion ion-md-notifications-outline navbar-icon align-middle"></i>
                    <span class="badge badge-dot badge-default indicator"></span>
                    <span class="d-lg-none align-middle">&nbsp; Notifications</span>
                </a>*@

            </div>
        </div>
    </nav>
<!-- / Layout navbar -->
