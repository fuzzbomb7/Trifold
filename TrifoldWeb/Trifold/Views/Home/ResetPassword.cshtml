@{
	ViewData["Title"] = "Reset Password | Trifold";
	Layout = "Layouts/_LayoutBlank";
}
@section Styles {
	<!-- Page -->
	<link rel="stylesheet" href="~/vendor/css/pages/authentication.css">
	<style>
		.card hr {
			border-color: #ccc;
		}
	</style>

}

<!--
=================================================================
**************************** CONTENT ****************************
-->
<div class="authentication-wrapper authentication-2 px-4">
	<div class="authentication-inner py-5">
		<!-- Form -->
		<form class="card" method="post">
			<div class="p-4">
				<!-- Logo -->
				<div class="d-flex justify-content-center align-items-center mb-2">
					<div class="d-flex justify-content-center align-items-center mb-2" style="font-size:1.8rem">
						<span class="app-brand-logo">
							<i class="far fa-map"></i>
						</span>
						<span class="app-brand-text sidenav-text ml-3">trifold</span>
					</div>
				</div>
				<!-- / Logo -->
				<h5 class="text-center text-muted font-weight-normal mb-4">Reset Your Password</h5>
				<hr class="mt-0 mb-4">
				<p>
					Enter your email address and we will send you a link to reset your password.
				</p>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Enter your email address" name="email">
				</div>
				<div class="text-primary mb-3">@if(ViewData["Confirm"] != null) { @ViewData["Confirm"] }</div>
				<button type="submit" class="btn btn-primary btn-block">Send password reset email</button>
			</div>
		</form>
		<!-- / Form -->
	</div>
</div>