@model Trifold.Models.Login
@{
	ViewData["Title"] = "Login | Trifold";
	Layout = "Layouts/_LayoutBlank";
}
@section Styles {
	<!-- Page -->
	<link rel="stylesheet" href="~/vendor/css/pages/authentication.css">
}

<!--
=================================================================
**************************** CONTENT ****************************
-->
<div class="authentication-wrapper authentication-2 ui-bg-cover ui-bg-overlay-container px-4" style="background-image: url('/images/hippodrome.jpg');">
	<div class="ui-bg-overlay bg-dark opacity-25"></div>
	<div class="authentication-inner py-5">
		<div class="card">
			<div class="p-4 shadow">
				<!-- Logo -->
				<div class="d-flex justify-content-center align-items-center h4">
					<span class="app-brand-logo pt-2">
						<i class="far fa-map"></i>
					</span>
					<span class="app-brand-text ml-2">trifold</span>
				</div>
				<!-- / Logo -->
				<div asp-validation-summary="All" class="text-danger"></div>
				<!-- Form -->
				<form method="post">
					<div class="form-group">
						<label class="form-label">Email</label>
						<input class="form-control" asp-for="Email">
					</div>
					<div class="form-group">
						<label class="form-label d-flex justify-content-between align-items-end">
							<label class="form-label mb-0">Password</label>
							<a href="/ResetPassword" class="d-block small" tabindex="-1">Forgot password?</a>
						</label>
						<input type="password" class="form-control" asp-for="Password">
					</div>
					<div class="d-flex justify-content-between align-items-center m-0">
						<label class="custom-control custom-checkbox m-0">
							<input type="checkbox" class="custom-control-input" asp-for="RememberMe">
							<span class="custom-control-label">Remember me</span>
						</label>
						<button type="submit" class="btn btn-primary">Sign In</button>
					</div>
				</form>
				<!-- / Form -->
			</div>
		</div>
	</div>
</div>